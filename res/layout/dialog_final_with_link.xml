<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/minimum_margin_widget">
    

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lottery_gift"
        android:textSize="@dimen/l_font_size"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginBottom="@dimen/minimum_margin_widget"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/further_info"
        android:layout_gravity="center"
        android:gravity="center" />
    
    <TextView 
        android:id="@+id/websiteLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"/>
    
</LinearLayout>
